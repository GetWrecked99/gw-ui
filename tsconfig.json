{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",

    "jsx": "react-jsx",
    "strict": true,
    "skipLibCheck": true,

    "declaration": true,
    "declarationMap": true,

    "rootDir": "src",
    "outDir": "dist"
  },
  "include": ["src"],
  "exclude": ["dist", "node_modules"]
}
